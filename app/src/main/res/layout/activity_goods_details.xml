<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/titlebar" android:id="@+id/title"/>
    <LinearLayout
        android:layout_above="@+id/tv_commit"
        android:layout_below="@+id/title"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@color/colorGrayO"/>
    <LinearLayout
        android:layout_marginLeft="3dp"
        android:paddingRight="3dp"
        android:id="@+id/ll_title_texts"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <View
            android:layout_width="0.5dp"
            android:background="@color/colorGrayO"
            android:layout_height="match_parent"/>
        <TextView
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="货物名称"
            android:textSize="12sp"
            android:textColor="@color/colorGrayO"
            android:layout_height="match_parent" />
        <View
            android:layout_width="0.5dp"
            android:background="@color/colorGrayO"
            android:layout_height="match_parent"/>
        <TextView android:textStyle="bold"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="数量"
            android:textSize="12sp"
            android:textColor="@color/colorGrayO"
            android:layout_height="match_parent" />
        <View
            android:layout_width="0.5dp"
            android:background="@color/colorGrayO"
            android:layout_height="match_parent"/>
        <TextView android:textStyle="bold"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="储位"
            android:textSize="12sp"
            android:textColor="@color/colorGrayO"
            android:layout_height="match_parent" />
        <View
            android:layout_width="0.5dp"
            android:background="@color/colorGrayO"
            android:layout_height="match_parent"/>
        <TextView android:textStyle="bold"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="批次号"
            android:textSize="12sp"
            android:textColor="@color/colorGrayO"
            android:layout_height="match_parent" />
        <View
            android:layout_width="0.5dp"
            android:background="@color/colorGrayO"
            android:layout_height="match_parent"/>
        <TextView android:textStyle="bold"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:text="判断"
            android:textSize="12sp"
            android:textColor="@color/colorGrayO"
            android:layout_height="match_parent" />
        <View
            android:layout_width="0.5dp"
            android:background="@color/colorGrayO"
            android:layout_height="match_parent"/>
        <TextView android:textStyle="bold"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:text="操作"
            android:textSize="12sp"
            android:textColor="@color/colorGrayO"
            android:layout_height="match_parent" />
        <View
            android:layout_width="0.5dp"
            android:background="@color/colorGrayO"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_below="@+id/ll_title_texts"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGrayO"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_out_goods"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView></LinearLayout>
    <TextView
        android:id="@+id/tv_commit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBlue"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"></TextView>
</RelativeLayout>
